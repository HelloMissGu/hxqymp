@import '../../assets/iconfont/font.wxss';
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;
  background: #F9EEDA url(https://gongde-assets.oss-cn-shenzhen.aliyuncs.com/texture.png) repeat repeat;
}
.pay-result-container {
  padding-bottom: 200rpx;
}
.pay-status-container {
  width: calc(100% - 64rpx);
  margin: 32rpx auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;
  border: 1px solid #8B623E;
  padding: 36rpx 0;
}
.pay-status-container::before, .pay-status-container::after, .helper::before, .helper::after {
  background: url(https://gongde-assets.oss-cn-shenzhen.aliyuncs.com/border.png) repeat repeat;
  width: 40rpx;
  height: 40rpx;
  background-size: 40rpx 40rpx;
  position: absolute;
  content: '';
}
.pay-status-container::before {
  left: 0;
  top: 0;
}
.pay-status-container::after {
  right: 0;
  top: 0;
  transform: rotate(90deg);
}
.helper {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.helper::before {
  left: 0;
  bottom: 0;
  transform: rotate(-90deg);
}
.helper::after {
  right: 0;
  bottom: 0;
  transform: rotate(180deg);
}
.pay-status-content {
  color: #A41522;
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  z-index: 10;
}
.pay-status-content .iconfont {
  margin-right: 16rpx;
}
.check-order {
  color: #8B623E;
  font-size: 26rpx;
  border-bottom: 1px dashed;
  margin-top: 48rpx;
  font-weight: normal;
}
.divider {
  width: 100%;
  height: 12rpx;
  background: #F3EFEB;
}
.bless-para-container {
  width: 100%;
  margin-top: 8rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 18rpx 32rpx 32rpx 32rpx;
  position: relative;
  overflow: hidden;
}
.bless-para-title {
  color: #382F30;
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  text-align: center;
  display: inline-block;
  margin: 0 auto 32rpx auto;
}
.bless-para-title::before, .bless-para-title::after {
  background: url(https://gongde-assets.oss-cn-shenzhen.aliyuncs.com/cloud.png);
}
.bless-para-title::before {
  content: '';
  position: absolute;
  width: 64rpx;
  height: 28rpx;
  left: -80rpx;
  top: 8rpx;
  background-size: 64rpx 28rpx;
}
.bless-para-title::after {
  content: '';
  position: absolute;
  width: 64rpx;
  height: 28rpx;
  right: -80rpx;
  top: 8rpx;
  background-size: 64rpx 28rpx;
  transform: scale(-1, 1);
}
.bless-para-content {
  color: #3C160F;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 8rpx;
  line-height: 50rpx;
}
.bless-para-pic {
  width: 520rpx;
  height: 280rpx;
  border-radius: 12rpx;
  margin: 8rpx auto 16rpx auto;
  border: 2px solid white;
}
.fo {
  position: absolute;
  height: 100%;
  transform: scale(1.5, 1.5);
  top: 120rpx;
  z-index: -1;
}
.qrcode {
  width: 100%;
  display: block;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
}