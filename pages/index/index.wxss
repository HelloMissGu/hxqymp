@import '../../assets/iconfont/font.wxss';
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;
}
image {
  width: 300rpx;
  margin: 0 auto;
  display: block;
}
.authorize-container view {
  width: 80%;
  margin: 0 auto;
  font-size: 28rpx;
  color: #666;
  text-align: left;
  line-height: 40rpx;
}
button {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 100rpx;
  background: #B50017;
  color: #fff;
}
button.button-hover {
  background: #A41522;
  color: #fff;
}